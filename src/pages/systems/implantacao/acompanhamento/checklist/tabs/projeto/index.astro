---
import Layout from '@layouts/Layout.astro';
import Header from '@includes/Header.astro';
import BtnPrincipal from '@components/Btns/BtnPrincipal.astro';
import ContentInfo from '../../_content-info.astro'
import ContentTabs from '../../_content-tabs.astro'
import ContentForm from './_content-form.astro'

import '../../_assets/styles.css'
---

<Layout>
    <Header />

    <main data-el="main-app" class="main-app">
        <section class="container-fluid">
            <nav aria-label="breadcrumb" class="breadcrumb-app">
                <div class="d-flex align-items-center justify-content-between gap-1">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item">
                            <a href="/principal/" data-bs-toggle="tooltip" data-bs-title="Principal">
                                <i class="bi bi-house-fill"></i>
                            </a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="/systems/implantacao/">Implantação</a>
                        </li>
                        <li class="breadcrumb-item">Acompanhamento</li>
                        <li class="breadcrumb-item">
                            <a href="/systems/implantacao/acompanhamento/status/">Status</a>
                        </li>
                        <li class="breadcrumb-item">Checklist</li>
                        <li class="breadcrumb-item active" aria-current="page">Projeto</li>
                    </ol>

                    <BtnPrincipal />
                </div>
            </nav>
        </section>

        <section class="container-fluid">
            <ContentInfo />
            <ContentTabs />

            <ContentForm />
        </section>
    </main>
</Layout>
