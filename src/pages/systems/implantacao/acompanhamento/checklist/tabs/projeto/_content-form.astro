<style is:inline>
    .btn-checklist{
        position: relative;
        color: #b4b8bb;
        cursor: pointer;
        font-size: 1.65rem !important;
    }
    .btn-checklist [data-icon="check"].active{
        color: var(--color-app-green-400);
    }
    .btn-checklist input{
        z-index: -1;
        position: absolute;
    }
</style>

<script is:inline>
    $(document).ready(function() {
        function statusCheckIcon(checkbox){
            const icon = $(checkbox).siblings('[data-icon="check"]')
            $(checkbox).is(':checked') ? icon.addClass('active') : icon.removeClass('active')
        }
        $('[data-checkbox="check"]').each(function() {
            statusCheckIcon(this)
        })
        $('[data-checkbox="check"]').on('change', function() {
            statusCheckIcon(this)
        })
    })
</script>
