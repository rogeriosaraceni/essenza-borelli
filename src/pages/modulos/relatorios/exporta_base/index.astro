---
import Layout from '@layouts/Layout.astro';
import Header from "@includes/header/header.astro";
import BtnPrincipal from '@components/Btns/BtnPrincipal.astro';

import Nav from '../_nav.astro';
import ContentForm from './_content-form.astro';
---

<Layout>
    <header data-el="top-fixed" class="header-app navbar navbar-expand-xl">
        <div class="d-flex flex-column w-100">
            <Header />
            <Nav />
        </div>
    </header>

    <main data-el="main-app" class="main-app">
        <section class="container-fluid">
            <nav aria-label="breadcrumb" class="breadcrumb-app">
                <div class="d-flex align-items-center justify-content-between gap-1">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item">
                            <a href="/principal/" data-bs-toggle="tooltip" data-bs-title="Principal">
                                <i class="bi bi-house-fill"></i>
                            </a>
                        </li>
                        <li class="breadcrumb-item">Relat√≥rios</li>
                        <li class="breadcrumb-item active" aria-current="page">Exporta Base</li>
                    </ol>

                    <BtnPrincipal />
                </div>
            </nav>
        </section>

        <section class="container-fluid">
            <ContentForm />
        </section>
    </main>
</Layout>
