---
import Layout from '@layouts/Layout.astro'
import Header from '@includes/Header.astro'

import ContentSelecao from './_ContentSelecao.astro'
import ContentBtns from './_ContentBtns.astro'
import ContentTabs from './_ContentTabs.astro'
import ContentBtnsForm from './_ContentBtnsForm.astro'
import BtnPrincipal from '@components/Btns/BtnPrincipal.astro'
---

<Layout>
    <Header />

    <main data-el="main-app" class="main-app">
        <section class="container-fluid">
            <nav aria-label="breadcrumb" class="breadcrumb-app">
                <div class="d-flex align-items-center justify-content-between gap-1">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item">
                            <a href="/principal/" data-bs-toggle="tooltip" data-bs-title="Principal">
                                <i class="bi bi-house-fill"></i>
                            </a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="/systems/pex/">PEX</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Avaliação</li>
                    </ol>

                    <BtnPrincipal />
                </div>
            </nav>
        </section>

        <section class="container-fluid">

            <ContentSelecao />
            <ContentBtns />

            <form action="" method="post">
                <ContentTabs />
                <ContentBtnsForm />
            </form>
        </section>
    </main>
</Layout>
